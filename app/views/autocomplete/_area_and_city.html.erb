<% areas.each do |area| %>
  <li class="list-group-item hover:bg-teal-200 text-stone-400 hover:text-indigo-800 px-4 py-2 rounded-md transition-colors duration-200 ease-in-out" role="option" data-autocomplete-value="<%= area.id %>">
    <%= area.name %>
  </li>
<% end %>
<% cities.each do |city| %>
  <li class="list-group-item hover:bg-teal-100 text-stone-400 hover:text-indigo-800 px-4 py-2 rounded-md transition-colors duration-200 ease-in-out" role="option" data-autocomplete-value="<%= city.id %>">
    <%= city.name %>
  </li>
<% end %>