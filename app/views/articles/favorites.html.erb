<div class="bg-white min-h-screen py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <!-- 固定部分 -->
    <div class="text-center sticky top-0 z-10">
      <h2 class="text-2xl font-bold text-gray-800 font-hannari mb-4 lg:text-3xl">ここ、めっちゃええとこ。</h2>
    </div>

    <!-- 記事部分 -->
    <%= turbo_frame_tag "articles" do %>
      <div class="grid gap-x-4 gap-y-6 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-3 xl:grid-cols-4 overflow-y-auto">
        <% @favorite_articles.each do |article| %>
          <%= render 'article', article: article %>
        <% end %>
      </div>
    <% end %>
    <!-- ページネーション部分 -->
    <div class="flex justify-center pt-10">
      <%= paginate @favorite_articles, theme: 'article' %>
    </div>
  </div>
</div>
