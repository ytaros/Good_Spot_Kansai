<div data-controller="autocomplete" data-autocomplete-url-value="<% autocomplete_path %>" role="combobox">
  <%= search_form_for @q, url: search_articles_url, method: :get, html: { class: 'flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-2'}  do |f| %>
    <%= f.search_field :area_name_or_city_name_cont, placeholder: "Area", class: 'flex-1 text-sm px-4 py-2 bg-transparent border-0 border-b-2 border-indigo-200 hover:bg-white hover:bg-opacity-50 focus:border-indigo-300 focus:ring-1 focus:ring-gray-300 focus:outline-none transition duration-300' %>    <%= f.search_field :tags_name_cont, placeholder: "Tag", data: { autocomplete_target: 'input' }, class: 'flex-1 text-sm px-4 py-2 bg-transparent border-0 border-b-2 border-indigo-200 hover:bg-white hover:bg-opacity-50 focus:ring-1 focus:ring-gray-300 focus:outline-none transition duration-300' %>
    <%= f.button type: 'submit', class: 'w-full sm:w-auto sm:ml-2 px-4 py-2 bg-transparent text-indigo-400 border-0 hover:hover:scale-110 transition-transform focus:outline-none transition duration-300' do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" height="1em" viewBox="0 0 512 512" class: 'w-4 h-4 mr-2'>
        <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
    <% end %>
  <% end %>
</div>