<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <!-- 固定ヘッダー部分 -->
    <div class="text-center top-0 z-10 bg-white">
      <h2 class="text-2xl font-bold text-gray-800 font-hannari mb-8 lg:text-3xl">関西、めっちゃええとこ。</h2>
    </div>
    <!-- 記事コンテンツ -->
    <%= turbo_frame_tag "articles" do %>
      <div class="grid gap-x-4 gap-y-6 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-3 xl:grid-cols-4 mt-4">
        <% @articles.each do |article| %>
          <%= render 'article', article: article %>
        <% end %>
      </div>
    <% end %>
    
    <!-- ページネーション部分 -->
    <div class="flex justify-center pt-10">
      <%= paginate @articles, theme: 'article' %>
    </div>
  </div>
</div>