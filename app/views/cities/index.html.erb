<!-- cities/new.html.erb & cities/index.html.erb -->
<div class="flex justify-center">
<%= image_tag "#{area_image_name(@area.name)}.webp", alt: @area.name, class: "object-contain h-80 w-80 mx-auto" %>
</div>
<h2><%= @area.name %> の市町村一覧</h2>

<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">市町村名</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @cities.each do |city| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap">
          <%= city.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>