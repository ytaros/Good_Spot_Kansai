<% content_for(:title, t('.title')) %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 p-4">
  <div class="bg-white p-8 rounded-lg shadow-md w-full md:w-1/2 lg:w-1/3 -mt-16">
    <h1 class="text-2xl font-bold mb-6"><%= t('.title') %></h1>
    <%= turbo_frame_tag 'password_reset_form' do %>
      <%= form_with model:@user, url: password_reset_path(@token), local: true, data: { turbo: "false" } do |f| %>
        <div class="mb-4">
          <%= f.label :password, User.human_attribute_name(:password), class: "block text-sm font-medium text-gray-600" %>
          <%= f.password_field :password, class: 'mt-1 p-2 w-full border border-purple-500 rounded-md' %>
        </div>
        <div class="mb-6">
          <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation), class: "block text-sm font-medium text-gray-600" %>
          <%= f.password_field :password_confirmation, class: 'mt-1 p-2 w-full border border-purple-500 rounded-md' %>
        </div>
        <div class="flex flex-col items-center justify-between mb-4">
          <%= f.submit t('defaults.update'), class: 'bg-purple-300 hover:bg-purple-400 text-white font-medium py-2 px-4 rounded mb-2' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
